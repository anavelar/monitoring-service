{
  "handlers": {
    "default": {
      "type": "pipe",
      "command":"tee /dev/null"
    },
    "mailer-down": {
      "type": "pipe",
      "command": "/usr/local/bundle/bin/handler-mailer.rb",
      "filter": "noise-keepalive"
    },
    "mailer-up": {
      "type": "pipe",
      "command": "/usr/local/bundle/bin/handler-mailer.rb",
      "filter": "keepalive-up"
    },
    "mailer": {
      "type": "set",
      "handlers": ["mailer-down", "mailer-up"]
    },
    "none": {
      "type": "pipe",
      "command":"tee /dev/null"
    },
    "metrics": {
      "type": "set",
      "handlers": [
        "none",
        "influxdb"
      ]
    }
  }
}
